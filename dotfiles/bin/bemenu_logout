#!/usr/bin/env bash

case "$(echo -e "lock\nsuspend\nhibernate\nlogout\nreboot\npoweroff" | bemenu -i -p "power" \
  -H 34 --fn "ComicShannsMono Nerd Font"\
  --hp 8\
  --cf "#000000"\
  --tb "#e82424"\
  --tf "#000000"\
  --fb "#000000"\
  --ff "#dcd7ba"\
  --nb "#000000"\
  --nf "#dcd7ba"\
  --hb "#7e9cd8"\
  --hf "#000000"\
  --ab "#000000"\
  --af "#dcd7ba"\
    )" in
        lock) exec lock;;
        suspend) exec swaymsg "output eDP-1 enable" && systemctl suspend;;
        hibernate) exec swaymsg "output eDP-1 enable" && systemctl hibernate;;
        logout) exec swaymsg "exit";;
        reboot) exec  rebooot;;
        poweroff) exec poweroff;;
esac
